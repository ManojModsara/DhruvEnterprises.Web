@model DhruvEnterprises.Dto.ChangePasswordDto
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Change Password</h3>
        </div>
        <!-- /.box-header -->
        @Html.Partial("_Notification")
        @if (Model != null && Model.UserId > 0)
        {
            <form action="@Url.Action("changepassword", "account")" method="post">
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CurrentPassword)
                        @Html.PasswordFor(model => model.CurrentPassword, true, new { @class = "form-control", @placeholder = "Current Password" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NewPassword)
                        @Html.PasswordFor(model => model.NewPassword, true, new { @class = "form-control", @placeholder = "New Password" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConfirmPassword)
                        @Html.PasswordFor(model => model.ConfirmPassword, true, new { @class = "form-control", @placeholder = "Confirm Password" })
                    </div>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </div>
            </form>
        }
    </div>
</section>
@section scripts{
    @Scripts.Render("~/Scripts/jquery.validate.js")
}

