@model DhruvEnterprises.Dto.UserDto
@using DhruvEnterprises.Web.Code.LIBS
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login -@SiteKey.CompanyShortName</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    @Styles.Render("~/Content/select2/select2-bootstrap.css", "~/Content/select2/select2.css")


    @Styles.Render("~/Content/css/bootstrap.min.css",
    "~/Content/css/font-awesome.min.css",
    "~/Content/css/AdminLTE.min.css",
    "~/Content/css/skins/_all-skins.min.css", "~/Content/plugins/iCheck/square/blue.css"
    )
    <style>
        .signup-box {
            width: 650px;
            margin: 7% auto;
        }
    </style>
    <style>
        select.select2 {
            display: block !important;
            visibility: hidden;
            position: absolute;
            margin-top: 4px;
            margin-left: 4px;
            width: 190px;
            height: 20px;
        }
    </style>
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

</head>
<body class="hold-transition login-page">

    <div class="signup-box">
        @*<div class="login-logo">
            <a href="@Url.Action("Index")">
                <img src="~/Images/nouser.png" width="100" height="100" />
            </a>
        </div>*@
       
            
                
                    <div class="login-box-body">
                        <p class="login-box-msg">Sign Up</p>
                        @Html.Partial("_Notification")
                        <form id="form1" action="@Url.Action("UserSignUp", "account")" method="post">

                            <div class="box-body">

                                <div class="col-md-6">
                                    <div class="box box-danger">
                                        <div class="box-header">
                                            <h3 class="box-title">General Info</h3>
                                        </div>
                                        <div class="box-body">
                                            <div class="form-group required">
                                                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                                @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control ", @placeholder = "Full Name" })<!-- /.input group -->
                                            </div>
                                            <div class="form-group required">
                                                @Html.LabelFor(m => m.EmailId, new { @class = "control-label" })
                                                @Html.TextBoxFor(m => m.EmailId, htmlAttributes: new { @class = "form-control ", @placeholder = "Email" })<!-- /.input group -->
                                            </div>
                                            <div class="form-group ">
                                                @Html.LabelFor(m => m.ContactNo, new { @class = "control-label" })

                                                @Html.TextBoxFor(m => m.ContactNo, htmlAttributes: new { @class = "form-control ", @placeholder = "Contact Number" })<!-- /.input group -->
                                            </div>
                                            <div class="form-group required">
                                                @Html.LabelFor(m => m.Username, new { @class = "control-label" }) <span>(Login ID)</span>
                                                @Html.TextBoxFor(m => m.Username, htmlAttributes: new { @class = "form-control ", @placeholder = "Username" })<!-- /.input group -->
                                            </div>
                                            <div class="form-group required">
                                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })<span>(Login Password)</span>
                                                @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control ", @placeholder = "Password" })<!-- /.input group -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="box box-danger">
                                        <div class="box-header">
                                            <h3 class="box-title">Business Info</h3>
                                        </div>
                                        <div class="box-body">
                                            <div class="form-group ">
                                                @Html.Label("Company Name", new { @class = "control-label" })
                                                @Html.TextBox("Company", "", htmlAttributes: new { @class = "form-control " })<!-- /.input group -->

                                            </div>
                                            <div class="form-group ">
                                                Is Registered with GST:-
                                                <label>@Html.RadioButton("gst", "Yes", htmlAttributes: new { @id = "gstt", @class = "radioBtnClass", @checked = true })Yes</label>
                                                <label>@Html.RadioButton("gst", "No", htmlAttributes: new { @id = "gst1t", @class = "radioBtnClass" })No</label>

                                            </div>
                                            <div class="form-group" style="display:block" id="divGst">
                                                @Html.Label("GST No", new { @class = "control-label" })
                                                @Html.TextBox("gstNo", "", htmlAttributes: new { @class = "form-control " })<!-- /.input group -->
                                            </div>

                                            <div class="form-group ">
                                                @Html.Label("Registered Address", new { @class = "control-label" })
                                                @Html.TextBox("gstRaddress", "", htmlAttributes: new { @class = "form-control " })<!-- /.input group -->
                                            </div>
                                            <div class="form-group ">
                                                @Html.Label("Phone Number", new { @class = "control-label" })
                                                @Html.TextBox("phone", "", htmlAttributes: new { @class = "form-control " })<!-- /.input group -->
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(m => m.StateID, new { @class = "control-label" })
                                                @Html.DropDownListFor(m => m.StateID, new SelectList(ViewBag.AStates, "Id", "Name"), "Select State", new { @class = "form-control " })
                                            </div>


                                            <div class="form-group ">
                                                <br />
                                                <div class="col-md-12">
                                                    <div class="btn-mar pull-right">
                                                        <button class="btn btn-block btn-success"> Submit <i class="fa fa-arrow-circle-right"></i></button>
                                                    </div>
                                                    <div class="btn-mar pull-right">
                                                        <a class="btn btn-block btn-default" href="@Url.Action("index")"><i class="fa fa-arrow-circle-left"></i> Cancel</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>




                    </div>
                
            
        
        

    </div>

</body>
</html>
@section scripts{
    @Scripts.Render("~/Scripts/Custom/adminuser/createedit.js", "~/bundles/jqueryval", "~/bundles/select2")
}


<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    $(document).ready(function () {
        $(".radioBtnClass").change(function () {
            var selValue = $("input[type='radio']:checked").val();
            if (selValue == "Yes")
            {
                $("#divGst").css("display", "block");
            }
            else {
                $("#gstNo").val('');
                $("#divGst").css("display", "none");
            }
        });

    });
</script>
