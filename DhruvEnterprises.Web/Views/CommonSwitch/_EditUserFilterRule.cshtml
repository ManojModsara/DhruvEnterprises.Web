
@using DhruvEnterprises.Web.Models.Others
@model DhruvEnterprises.Dto.EditUserFilterRuleDto
<div id="frm-addedit-apiwallet" class="cmxform">
    @using (Html.BeginForm(FormMethod.Post))
    {

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.OperatorNames)
        @Html.HiddenFor(m => m.UserNames)
        @Html.HiddenFor(m => m.CircleNames)
        @Html.HiddenFor(m => m.VendorNames)

        @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Edit Block Route" })

        <div id="validation-summary"></div>
        <div class="modal-body form-horizontal">
            <div class="form-group required">
                @Html.LabelFor(m => m.UserIds, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.ListBoxFor(m => m.UserIds, new MultiSelectList(Model.UserList, "Uid", "Name", @Model.UserIds), new { @class = "form-control select2" })
                </div>
            </div>UserFilterRule

            <div class="form-group required">
                @Html.LabelFor(m => m.OperatorIds, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.ListBoxFor(m => m.OperatorIds, new MultiSelectList(Model.OperatorList, "OperatorId", "OperatorName", @Model.OperatorIds), new { @class = "form-control select2" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CircleIds, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.ListBoxFor(m => m.CircleIds, new MultiSelectList(@Model.CircleList, "CircleId", "CircleName", @Model.CircleIds), new { @class = "form-control select2" })
                </div>
            </div>
            <div class="form-group required">
                @Html.LabelFor(m => m.Percent, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.TextBoxFor(m => m.Percent, htmlAttributes: new { @class = "form-control ", @placeholder = "Percentage" })
                </div>
            </div>

            <div class="form-group required">
                @Html.LabelFor(m => m.Amount, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.TextBoxFor(m => m.Amount, htmlAttributes: new { @class = "form-control ", @placeholder = "Amount to Filter" })
                </div>
            </div>
            <div class="form-group required">
                @Html.LabelFor(m => m.Roffer, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.TextBoxFor(m => m.Roffer, htmlAttributes: new { @class = "form-control ", @placeholder = "Roffer Amount" })
                </div>
            </div>
            <div class="form-group required">
                @Html.LabelFor(m => m.VendorIds, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.ListBoxFor(m => m.VendorIds, new MultiSelectList(Model.ApiList, "Id", "ApiName", @Model.OperatorIds), new { @class = "form-control select2" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IsActive, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9 checkbox popup-check">
                    @Html.CheckBoxFor(m => m.IsActive)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IsAutoBlock, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9 checkbox popup-check">
                    @Html.CheckBoxFor(m => m.IsAutoBlock)
                </div>
            </div>
            <script src="~/Scripts/Custom/CommonSwitch/EditUserFilterRule.js"></script>
        </div>
        @Html.Partial("_ModalFooter", new ModalFooter { })
    }
</div>

