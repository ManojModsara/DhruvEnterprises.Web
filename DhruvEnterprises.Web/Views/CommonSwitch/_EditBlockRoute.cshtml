
@using DhruvEnterprises.Web.Models.Others
@model DhruvEnterprises.Dto.EditBlockRouteDto
<div id="frm-addedit-apiwallet" class="cmxform">
    @using (Html.BeginForm(FormMethod.Post))
    {
        
        @Html.HiddenFor(m => m.Id) 
        @Html.HiddenFor(m => m.OperatorNames)
        @Html.HiddenFor(m => m.UserNames)
        @Html.HiddenFor(m => m.CircleNames)

        @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Edit Block Route" })

        <div id="validation-summary"></div>
        <div class="modal-body form-horizontal">

            <div class="form-group required">
                @Html.LabelFor(m => m.OpTypeIds, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.ListBoxFor(m => m.OpTypeIds, new MultiSelectList(Model.OpTypeList, "TypeId", "TypeName", @Model.OpTypeIds), new { @class = "form-control select2" })
                </div>
            </div>
            <div class="form-group required">
                @Html.LabelFor(m => m.OperatorIds, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.ListBoxFor(m => m.OperatorIds, new MultiSelectList(Model.OperatorList, "OperatorId", "OperatorName", @Model.OperatorIds), new { @class = "form-control select2" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CircleIds, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.ListBoxFor(m => m.CircleIds, new MultiSelectList(@Model.CircleList, "CircleId", "CircleName", @Model.CircleIds), new { @class = "form-control select2" })
                </div>
            </div>
            <div class="form-group required">
                @Html.LabelFor(m => m.UserIds, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.ListBoxFor(m => m.UserIds, new MultiSelectList(Model.UserList, "Uid", "Name", @Model.UserIds), new { @class = "form-control select2" })
                </div>
            </div>

            <div class="form-group required">
                @Html.LabelFor(m => m.Amounts, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.TextBoxFor(m => m.Amounts, htmlAttributes: new { @class = "form-control ", @placeholder = "Amount to Filter" })
                </div>
            </div>
            <div class="form-group required">
                @Html.LabelFor(m => m.TypeId, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.DropDownListFor(m => m.TypeId, new SelectList(Model.TypeList, "StatusId", "StatusName"), "--Select--", new { @class = "form-control select2" })
                </div>
            </div>
            <div class="form-group required">
                @Html.LabelFor(m => m.StatusId, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.DropDownListFor(m => m.StatusId, new SelectList(Model.StatusList, "StatusId", "StatusName"), "--Select--", new { @class = "form-control select2" })
                </div>
            </div>

            <script src="~/Scripts/Custom/CommonSwitch/editblockroute.js"></script>
        </div>
        @Html.Partial("_ModalFooter", new ModalFooter { })
    }
</div>

