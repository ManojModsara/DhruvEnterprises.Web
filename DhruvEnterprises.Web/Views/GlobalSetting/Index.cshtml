@model IEnumerable<DhruvEnterprises.Data.GlobalSetting>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    @Styles.Render("~/datatables/css", "~/Scripts/plugins/alertifyjs/css/alertify.min.css")
}
<section class="content-header">
    <h1>
        Manage Global Setting
    </h1>
</section>
<section class="content">
    <div class="row">
        @Html.Partial("_Notification")
    </div>
    <div class="row">
        <div class="col-xs-12">

            <div class="box">

                <div class="box-body" id="divparent">
                    <div id="validation-summary"></div>
                    <table id="tabid" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="display:none">#</th>
                                <th style="display:none">#</th>
                                <td>Action Name</td>
                                <td>Email</td>
                                <td>SMS</td>

                            </tr>
                        </thead>
                        @{
                            var categories = (List<DhruvEnterprises.Data.GlobalSetting>)ViewData["MyData"]; 
                        }
                        @foreach (var item in categories)
                        {
                            <tbody>
                                <tr>
                                    <td style="display:none">@item.id</td>
                                    <td style="display:none">@item.Actionname</td>
                                    <td>
                                        <span style="font-weight:bold"> @item.Displayname </span>
                                    </td>                                   
                                    <td>
                                        <input class="chk_create" @( item.AllowEmail ? "checked=checked" : "") type="checkbox" id="chk_create" value="@item.id">
                                    </td>
                                    <td>
                                        <input class="chk_edit" @(item.AllowSMS ? "checked=checked" : "") type="checkbox" id="chk_edit" value="@item.id">
                                    </td>
                                    
                                </tr>
                            </tbody>
                        }
                    </table>
                    <input type="submit" id="btn-submit" value="Submit" class="btn btn-success pull-right" />
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
        @Scripts.Render("~/bundles/datatables", "~/bundles/jqueryval", "~/Scripts/global.js")
        @Scripts.Render("~/Scripts/Custom/GlobalSetting/index.js")
        @Scripts.Render("~/Scripts/plugins/alertifyjs/alertify.min.js")
    }

