@model DhruvEnterprises.Dto.ProductImagedto
@{
    ViewBag.Title = "Operatoredit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Styles.Render("~/datatables/css", "~/Scripts/plugins/alertifyjs/css/alertify.min.css", "~/bundles/css/select2")
@using (Html.BeginForm("AddImage", "Product", FormMethod.Post, new { @action = Url.Action("AddImage"), enctype = "multipart/form-data", @id = "model-createedit-adminuser" }))
{
    @Html.Partial("_Notification")
    @Html.HiddenFor(model => model.PId)
    <section class="content-header">
        <h1>
            @(Model.Id == 0 ? "Add Image" : "Edit Image")
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div id="validation-summary">

                </div>
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="box-body">

                        <div class="col-md-6">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title">Product Image Details</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.DisplayOrder, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.DisplayOrder, htmlAttributes: new { @class = "form-control ", @placeholder = "Image order" })<!-- /.input group -->
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="box box-danger">
                                    <div class="box-header">
                                        <h3 class="box-title">Image</h3>
                                    </div>
                                    <div class="box-body">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ImageUrl, new { @class = "col-lg-3 col-sm-3 control-label" })
                                            <div class="col-lg-9 col-sm-9">
                                                @Html.TextBoxFor(m => m.FileAttach, "", new { type = "file" })
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <img src="@Model.ImageUrl" alt="" style="height:125px" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="btn-mar pull-right">
                                <button class="btn btn-block btn-success"> Submit <i class="fa fa-arrow-circle-right"></i></button>
                            </div>
                            <div class="btn-mar pull-right">
                                <a class="btn btn-block btn-default" href="@Url.Action("index")"><i class="fa fa-arrow-circle-left"></i> Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
    </section>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval", "~/bundles/select2")
}

