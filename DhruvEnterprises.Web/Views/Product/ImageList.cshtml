
@{
    ViewBag.Title = "Product:Image";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/datatables/css", "~/Scripts/plugins/alertifyjs/css/alertify.min.css", "~/bundles/css/select2")

<section class="content-header">
    <h1>
        Product Image List

    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @Html.Partial("_Notification")
            <div class="box">
                <div class="box-header">
                    <div class="btn-group">
                        <a href="~/Product/AddImage?Pid=@ViewBag.FilterData.Id" class="btn btn-success">Add new <i class='fa fa-plus'></i></a>
                    </div>
                </div>
                <div class="box-body table-responsive scroll_tbl">

                    <table id="grid-index" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                    </table>

                </div>
            </div>
        </div>
    </div>

</section>
@section scripts{
    @Scripts.Render("~/bundles/datatables", "~/bundles/jqueryval", "~/bundles/datepicker", "~/bundles/select2")
    @Scripts.Render("~/Scripts/plugins/alertifyjs/alertify.min.js")
    @Scripts.Render("~/Scripts/Custom/Product/ImageList.js")

}




