@using DhruvEnterprises.Web.Models.Others
@model DhruvEnterprises.Dto.ComplaintDto
<div id="frm-create-edit-adminrole" class="cmxform">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.HiddenFor(model => model.RecId)
        @Html.HiddenFor(model => model.ComplaintId)
        @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Resolve Complain" })
        <div id="validation-summary"></div>
        <div class="modal-body form-horizontal">

            <div class="form-group">
                @Html.LabelFor(m => m.Comment, new { @class = "col-lg-4 col-sm-4 control-label" })
                <div class="col-lg-6 col-sm-6">
                    @Html.TextBoxFor(m => m.Comment, htmlAttributes: new { @class = "form-control ", @placeholder = "Comment" })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.OptTxnId, new { @class = "col-lg-4 col-sm-4 control-label" })
                <div class="col-lg-6 col-sm-6">
                    @Html.TextBoxFor(m => m.OptTxnId, htmlAttributes: new { @class = "form-control ", @placeholder = "Operator TxnId" })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IsResolved, new { @class = "col-lg-4 col-sm-4 control-label" })
                <div class="col-lg-6 col-sm-6">
                    @Html.CheckBoxFor(m => m.IsResolved) Yes
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.IsRefund, new { @class = "col-lg-4 col-sm-4 control-label" })
                <div class="col-lg-6 col-sm-6">
                    @Html.CheckBoxFor(m => m.IsRefund) Yes
                </div>
            </div>
        </div>

        @Html.Partial("_ModalFooter", new ModalFooter { })
    }
</div>
<script>

    var jqry = jQuery.noConflict();
    jqry(document).on('submit', 'form', function () {
        var buttons = jqry(this).find('[type="submit"]');
        if (jqry(this).valid()) {
            buttons.each(function (btn) {
                jqry(buttons[btn]).prop('disabled', true);
            });
        } else {
            buttons.each(function (btn) {
                jqry(buttons[btn]).prop('disabled', false);
            });
        }
    });
</script>