
@model DhruvEnterprises.Dto.BankAccountDto

@{
    ViewBag.Title = "User:CreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/select2/select2-bootstrap.css", "~/Content/select2/select2.css")


<style>
    select.select2 {
        display: block !important;
        visibility: hidden;
        position: absolute;
        margin-top: 4px;
        margin-left: 4px;
        width: 190px;
        height: 20px;
    }
</style>
@using (Html.BeginForm("AddEditBank", "BankAccount", FormMethod.Post, new { @action = Url.Action("AddEditBank"), enctype = "multipart/form-data", @id = "model-AddEditBank-bankaccount" }))
{
    @Html.Partial("_Notification")
    @Html.HiddenFor(model => model.Id) 
    <section class="content-header">
        <h1>
            @(Model.Id == 0 ? "Add Bank Account" : "Edit Bank Account")
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div id="validation-summary">

                </div>
                <div class="box">
                    <div class="box-body">

                        <div class="col-md-6">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title">Account Info</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.AccountNo, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.AccountNo, htmlAttributes: new { @class = "form-control ", @placeholder = "Account Number" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.IFSCCode, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.IFSCCode, htmlAttributes: new { @class = "form-control ", @placeholder = "IFSC Code" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.HolderName, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.HolderName, htmlAttributes: new { @class = "form-control ", @placeholder = "Account Holder Name" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group ">
                                        @Html.LabelFor(m => m.UpiAdress, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.UpiAdress, htmlAttributes: new { @class = "form-control ", @placeholder = "Upi Adress" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.AccountTypeId, new { @class = "control-label" })
                                        @Html.DropDownListFor(m => m.AccountTypeId, true, new SelectList(ViewBag.AccountTypeList, "Id", "Name", @Model.AccountTypeId), "Select AccountType", new { @class = "form-control select2" })
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.Remark, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Remark, htmlAttributes: new { @class = "form-control ", @placeholder = "Remark" })<!-- /.input group -->
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title">Bank Details</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.BankName, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.BankName, htmlAttributes: new { @class = "form-control ", @placeholder = "Bank Name(for display)" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.BranchName, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.BranchName, htmlAttributes: new { @class = "form-control ", @placeholder = "Bank/Branch Name" })<!-- /.input group -->
                                    </div>

                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.BranchAddress, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.BranchAddress, htmlAttributes: new { @class = "form-control ", @placeholder = "Branch Address" })<!-- /.input group -->

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.UserId, new { @class = "control-label" })
                                        @Html.DropDownListFor(m => m.UserId, new SelectList(ViewBag.UserList, "Id", "Username", @Model.UserId), "Select a User", new { @class = "form-control select2" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ApiId, new { @class = "control-label" })
                                        @Html.DropDownListFor(m => m.ApiId, new SelectList(ViewBag.ApiList, "Id", "ApiName", @Model.ApiId), "Select a Vendor", new { @class = "form-control select2" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.BlockAmount, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.BlockAmount, htmlAttributes: new { @class = "form-control ", @placeholder = "Block Amount" })<!-- /.input group -->
                                    </div>

                                   


                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="btn-mar pull-right">
                            <button class="btn btn-block btn-success"> Submit <i class="fa fa-arrow-circle-right"></i></button>
                        </div>
                        <div class="btn-mar pull-right">
                            <a class="btn btn-block btn-default" href="@Url.Action("index")"><i class="fa fa-arrow-circle-left"></i> Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
}

@section scripts{
    @Scripts.Render("~/Scripts/Custom/bankaccount/addeditbank.js", "~/bundles/jqueryval", "~/bundles/select2")
}





