@model DhruvEnterprises.Dto.UserProfilesDTO
@using DhruvEnterprises.Core;
@using DhruvEnterprises.Web.Code.LIBS;
@using DhruvEnterprises.Web.Models.Others;
@{
    ViewBag.Title = "UserProfile";
}
@Styles.Render("~/datatables/css", "~/Scripts/plugins/alertifyjs/css/alertify.min.css", "~/bundles/css/select2")

@using (Html.BeginForm("UserProfile", "Setting", FormMethod.Post, new { @action = Url.Action("UserProfile"), enctype = "multipart/form-data", @id = "model-createedit-adminuser" }))
{
    @Html.Partial("_Notification")
    @Html.HiddenFor(model => model.Id)
    <section class="content-header">
        <h1>
            @(Model.Id == 0 ? "Add User" : "Update User Profile")
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div id="validation-summary">

                </div>
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="box-body">

                        <div class="col-md-6">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title">User Info</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control ", @placeholder = "Full Name" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.EmailID, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.EmailID, htmlAttributes: new { @class = "form-control ", @placeholder = "Email", @disabled = "disabled" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group ">
                                        @Html.LabelFor(m => m.Mobileno, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Mobileno, htmlAttributes: new { @class = "form-control ", @placeholder = "Contact Number", @disabled = "disabled" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ApiToken, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.ApiToken, htmlAttributes: new { @class = "form-control ", @placeholder = "Api Token", @disabled = "disabled" })<!-- /.input group -->
                                    </div>
                                    @Html.HiddenFor(m => m.HiddenApiToken, htmlAttributes: new { @class = "form-control ", @placeholder = "Api Token" })<!-- /.input group -->

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ChangeToken, new { @class = "control-label" })
                                        @Html.CheckBoxFor(m => m.ChangeToken, false)<!-- /.input group --><span style="font-style:italic;font-size:small;color:red"> Tick to get new token id and then click Submit</span>

                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.IpAddress, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.IpAddress, htmlAttributes: new { @class = "form-control ", @placeholder = "Enter Your Ip Address" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.CallBackUrl, new { @class = "control-label" })
                                        @Html.TextAreaFor(m => m.CallBackUrl, htmlAttributes: new { @class = "form-control ", @placeholder = "Enter Your CallBack Url" })<!-- /.input group -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title">User Profile</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.ORGName, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.ORGName, htmlAttributes: new { @class = "form-control ", @placeholder = "Company Name/Shop Name" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.Contactno, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Contactno, htmlAttributes: new { @class = "form-control ", @placeholder = "Alternate Mobile No" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.Address, new { @class = "control-label" })
                                        @Html.TextAreaFor(m => m.Address, htmlAttributes: new { @class = "form-control ", @placeholder = "Address" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.GSTNo, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.GSTNo, htmlAttributes: new { @class = "form-control ", @placeholder = "GST No" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.GSTADDRESS, new { @class = "control-label" })
                                        @Html.TextAreaFor(m => m.GSTADDRESS, htmlAttributes: new { @class = "form-control ", @placeholder = "GST Address" })<!-- /.input group -->
                                    </div>

                                   
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="btn-mar pull-right">
                            <button class="btn btn-block btn-success"> Submit <i class="fa fa-arrow-circle-right"></i></button>
                        </div>
                        <div class="btn-mar pull-right">
                            <a class="btn btn-block btn-default" href="@Url.Action("index")"><i class="fa fa-arrow-circle-left"></i> Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        @Html.Partial("_Modal", new Modal { ID = "modal-add-edit-usertoken", AreaLabeledId = "modal-add-edit-usertoken-label", Size = Enums.ModalSize.Medium })
    </section>
}


