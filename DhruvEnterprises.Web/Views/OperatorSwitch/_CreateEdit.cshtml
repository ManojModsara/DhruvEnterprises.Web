

@using DhruvEnterprises.Web.Models.Others
@model DhruvEnterprises.Dto.OperatorDto 
<div id="frm-create-edit-operator" class="cmxform">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.HiddenFor(model => model.OperatorId)
        @Html.Partial("_ModalHeader", new ModalHeader { Heading = Model.OperatorId == 0 ? "Add Operator" : "Edit Operator" })
        <div id="validation-summary"></div>
        <div class="modal-body form-horizontal">

            <div class="form-group required">
                @Html.LabelFor(m => m.OperatorName, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.TextBoxFor(m => m.OperatorName, htmlAttributes: new { @class = "form-control ", @placeholder = "Operator Name" })
                </div>
            </div>
           
            <div class="form-group required">
                @Html.LabelFor(m => m.OpTypeId, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9 col-sm-9">
                    @Html.DropDownListFor(m => m.OpTypeId, new SelectList(Model.OpTypeList, "TypeId", "TypeName"), "--Select--", new { @class = "form-control select2" })
                </div>
            </div>

          
