
@model DhruvEnterprises.Dto.ReplaceSwitchDto

@{
    ViewBag.Title = "Switch: Replacement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/select2/select2-bootstrap.css", "~/Content/select2/select2.css")


<style>
    select.select2 {
        display: block !important;
        visibility: hidden;
        position: absolute;
        margin-top: 4px;
        margin-left: 4px;
        width: 190px;
        height: 20px;
    }
</style>
@using (Html.BeginForm("ReplaceSwitch", "OperatorSwitch", FormMethod.Post, new { @action = Url.Action("ReplaceSwitch"), enctype = "multipart/form-data", @id = "model-ReplaceSwitch" }))
{
    @Html.Partial("_Notification")

    <section class="content-header">
        <h1>
           Switch Replacement
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div id="validation-summary">

                </div>
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="box-body">

                        <div class="col-md-12">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title"> Switch Replacement </h3>
                                </div>
                                <div class="box-body">

                                    
                                     <div class="form-group required">
                                            @Html.LabelFor(m => m.OperatorId, new { @class = "control-label" })
                                            @Html.DropDownListFor(m => m.OperatorId, true, new SelectList(Model.OperatorList, "OperatorId", "OperatorName", @Model.OperatorId), "Select Service", new { @class = "form-control select2" })
                                        </div>
                                        <div class="form-group required">
                                            @Html.LabelFor(m => m.SwitchTypeId, new { @class = "control-label" })
                                            @Html.DropDownListFor(m => m.SwitchTypeId, true, new SelectList(Model.SwitchTypeList, "Id", "TypeName", @Model.SwitchTypeId), "Select Switch Type", new { @class = "form-control select2" })
                                        </div>
                                        <div class="form-group required">
                                            @Html.LabelFor(m => m.CurrentApiId, new { @class = "control-label" })
                                            @Html.DropDownListFor(m => m.CurrentApiId, true, new SelectList(Model.ApiSourceList, "ApiId", "ApiName", @Model.CurrentApiId), "Select Current Vendor", new { @class = "form-control select2" })
                                        </div>
                                        <div class="form-group required">
                                            @Html.LabelFor(m => m.NewApiId, new { @class = "control-label" })
                                            @Html.DropDownListFor(m => m.NewApiId, true, new SelectList(Model.ApiSourceList, "ApiId", "ApiName", @Model.NewApiId), "Select New Vendor", new { @class = "form-control select2" })
                                        </div>

                                       
                                   
                                </div>
                            </div>
                        </div>
                      
                    </div><!-- /.box-body -->
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="btn-mar pull-right">
                            <button class="btn btn-block btn-success"> Submit <i class="fa fa-arrow-circle-right"></i></button>
                        </div>
                        <div class="btn-mar pull-right">
                            <a class="btn btn-block btn-default" href="@Url.Action("index")"><i class="fa fa-arrow-circle-left"></i> Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
}

@section scripts{
    @Scripts.Render("~/Scripts/Custom/operatorswitch/replaceswitch.js", "~/bundles/jqueryval", "~/bundles/select2")
}





